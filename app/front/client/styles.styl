@import 'nib'

.page-header
  h1
    margin-top 0

#user
  .name
    margin-right 0.5em
    color #777

img.avatar
  // This is actually Nib's border-radius mixin (vendor-prefixed for older browsers)
  border-radius 300px
  border 0.1em solid silver

.quizName
  color #088

#players li
  display inline-block
  margin 0 0.25em 0.25em 0

#countDown
  position fixed
  right 0
  top 0
  font-size 2em
  font-weight bold
  padding 0.25em 0.5em
  background rgba(255, 255, 255, 0.8)
  border-radius bottom left 1em
  font-family monospace
  color #555

#scoreboard tbody tr
  td:first-child, td:last-child
    text-align center

#coreContainer > h1 > br + tt {
  white-space: pre;
  font-size: 80%;
  color: #555;
}
